                        &lt;select class="inputbox" name="DescOrderBy"&gt;
                                    &lt;option value="DESC"&gt;Descending order&lt;/option&gt;
                                    &lt;option selected="selected" value="ASC"&gt;Ascending order&lt;/option&gt;
                                &lt;/select&gt;
