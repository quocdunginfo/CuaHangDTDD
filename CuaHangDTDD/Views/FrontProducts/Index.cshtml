                                <option value="product_price">Price</option>
                                <option value="product_cdate">Latest Products</option>
                            </select>
                    <script type="text/javascript">//<![CDATA[
                        document.write('&nbsp;<input type="hidden" name="DescOrderBy" value="ASC" /><a href="javascript: document.order.DescOrderBy.value=\'DESC\'; document.order.submit()"><img src="sort_asc.png"/*tpa=http://livedemo00.template-help.com/virtuemart_37317/images/M_images/sort_asc.png*/ border="0" width="17" height="16" alt=""Ascending order" title="Ascending order" width="12" height="12" /></a>');
                        //]]></script>
